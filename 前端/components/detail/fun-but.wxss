.grid {
    border-top: 2rpx solid #f1f1f1;
}

.ggif {
    mix-blend-mode: screen;
}

.but {
    width: 250rpx;
    height: 70rpx;
    font-size: 28rpx;
    color: #888;
    border: none;
    /* position: absolute;
    left: 90rpx; */
    line-height: 1;
    border-radius: 100px;
    background-color: #fbbd08;
    box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,.1);
}

.but:after {
    border: none;
}

.menu-item {
    font-weight: 900;
    font-size: 50rpx;
}

.btn-bg {
    width: 750rpx;
    height: 100rpx;
    padding-bottom: 30rpx;
    position: relative;
}

.btn-icon {
    font-weight: 900;
    margin-right: 10rpx;
}

.btn-icon,.btn-text {
    font-size: 30rpx;
    color: #333;
}

.btn-change {
    position: absolute;
    right: 90rpx;
    width: 250rpx;
    height: 70rpx;
    border-radius: 100px;
    background-color: #fbbd08;
    box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,.1);
}