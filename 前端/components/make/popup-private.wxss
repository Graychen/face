.popup-all {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0,0,0,.8);
    z-index: 11;
}

.content-all {
    width: 600rpx;
    position: relative;
}

.viewimg {
    width: 300rpx;
    height: 300rpx;
    border: 1rpx solid #e2e2e2;
    overflow: hidden;
}

.content-close {
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    right: 0;
    border-top-right-radius: 12rpx;
    border-bottom-left-radius: 12rpx;
    background-color: rgba(0,0,0,.7);
}

.choose-img,.content-close {
    text-align: center;
    position: absolute;
    top: 0;
}

.choose-img {
    width: 300rpx;
    height: 300rpx;
    left: 0;
    line-height: 300rpx;
}

.cuIcon-cameraadd {
    font-size: 100rpx;
    color: #b2b2b2;
}