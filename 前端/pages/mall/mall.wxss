        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes slide-right {
    0% {
        opacity: 0;
        transform: translateX(100%);
    }

    100% {
        opacity: 1;
        transform: translateX(0);
    }
}

page {
    background-color: #fff;
}

.open {
    box-shadow: 0 8rpx 8rpx rgba(0,0,0,.1);
}

.close,.open {
    transition: box-shadow;
    -webkit-transition: box-shadow 1s;
}

.close {
    box-shadow: unset;
}

.title {
    display: inline-block;
    font-size: 30rpx;
    font-weight: 700;
    margin: 10rpx 30rpx;
}

.goods {
    display: flex;
    padding: 20rpx 0;
}

.goods-img {
    width: 252rpx;
    height: 252rpx;
    margin-right: 30rpx;
    border-radius: 8rpx;
    border: 1rpx solid #e2e2e2;
}

.goods-img image {
    width: 250rpx;
    height: 250rpx;
    border-radius: 8rpx;
}

.goods-content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.goods-title {
    font-size: 30rpx;
    font-weight: 400;
    color: #000;
    text-overflow: clip;
    -webkit-line-clamp: 1;
}

.goods-introduce,.goods-title {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.goods-introduce {
    font-size: 22rpx;
    color: grey;
    line-height: 1.8;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    margin-top: 15rpx;
}

.deliver {
    width: 100vw;
    height: 20rpx;
    background-color: #f9f9f9;
}

.icon {
    font-size: 34rpx;
    margin-right: 8rpx;
}

.favorite {
    position: fixed;
    bottom: 40rpx;
    right: 30rpx;
    width: 100rpx;
    height: 100rpx;
    font-size: 50rpx;
    color: #fff;
    line-height: 100rpx;
    text-align: center;
    background-color: #fbbd08;
    border-radius: 100%;
    box-shadow: 0 8rpx 8rpx rgba(0,0,0,.1);
}

.is-like {
    padding: 20rpx 0 0 20rpx;
}